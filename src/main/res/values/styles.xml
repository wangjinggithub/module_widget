<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--头部title栏的属性-->
    <declare-styleable name="TitleBar">
        <attr name="TextColorLeft" format="color"/>
        <attr name="TextColorRight" format="color"/>
        <attr name="TextColorCenter" format="color"/>
        <attr name="TextLeft" format="string"/>
        <attr name="TextRight" format="string"/>
        <attr name="TextCenter" format="string"/>
        <attr name="TextSizeLeft" format="dimension"/>
        <attr name="TextSizeRight" format="dimension"/>
        <attr name="TextSizeCenter" format="dimension"/>
        <attr name="isShowImgLeft" format="boolean"/>
        <attr name="isShowImgRight" format="boolean"/>
        <attr name="isShowLeft" format="boolean"/>
        <attr name="isShowRight" format="boolean"/>
        <attr name="srcLeft" format="color|reference"/>
        <attr name="srcRight" format="color|reference"/>
        <attr name="bg" format="color|reference"/>
        <attr name="onClickLeft" format="string"/>
        <attr name="onClickCenter" format="string"/>
        <attr name="onClickRight" format="string"/>
    </declare-styleable>

    <declare-styleable name="CornerLayout">
        <attr name="radius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
    </declare-styleable>

    <style name="TitleBarDefaultStyle">
        <item name="TextColorLeft">@android:color/black</item>
        <item name="TextColorRight">@android:color/black</item>
        <item name="TextColorCenter">@android:color/black</item>
        <item name="TextCenter">Try</item>
        <item name="TextSizeLeft">12sp</item>
        <item name="TextSizeRight">12sp</item>
        <item name="TextSizeCenter">18sp</item>
        <item name="isShowImgLeft">true</item>
        <item name="isShowImgRight">true</item>
        <item name="isShowLeft">true</item>
        <item name="isShowRight">false</item>
        <item name="srcLeft">@mipmap/icon_back_black</item>
        <!--<item name="srcRight">@mipmap/icon_join_plan</item>-->
        <item name="bg">@android:color/white</item>
    </style>

    <!--基本的dialog style 灰色背景-->
    <style name="DialogBaseTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!--不带带灰色背景（透明）的dialog-->
    <style name="DialogWithLightTheme" parent="@style/DialogBaseTheme">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <declare-styleable name="RaeTabLayout">
        <attr format="dimension" name="tabIndicatorWidth"/>
    </declare-styleable>
</resources>